{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@apps/*": ["apps/*"]
    },
    "typeRoots": ["typings/", "node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
