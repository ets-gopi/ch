{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"],
      "@common/*": ["common/*"],
      "@services/*": ["services/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
